@page
@model FinalProject.Front.Pages.GetUsersModel
<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid #007bff; /* Blue border for cells */
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #007bff; /* Blue background for header cells */
        color: #fff; /* White text color for header cells */
    }

    tr:nth-child(even) {
        background-color: #f8f9fa; /* Light Gray background for even rows */
    }

    tr:nth-child(odd) {
        background-color: #ffffff; /* White background for odd rows */
    }
</style>

<table class="table table-striped">
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <th scope="row">Users</th>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Address</td>
                <td>@user.Phone</td>
            </tr>
        }
    </tbody>
</table>
