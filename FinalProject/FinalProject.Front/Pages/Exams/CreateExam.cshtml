@page
@model FinalProject.Front.Pages.Exams.CreateExamModel
@{
}
<h1>Create New Exam</h1>

<h4>Exam</h4>
<hr />

<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="ExamTemplate.MaxScore" class="control-label">Number of Questions</label>
				<input asp-for="ExamTemplate.MaxScore" class="form-control" />
				<span asp-validation-for="ExamTemplate.MaxScore" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ExamTemplate.MinScore" class="control-label">Minimum Correct Answers</label>
				<input asp-for="ExamTemplate.MinScore" class="form-control" />
				<span asp-validation-for="ExamTemplate.MinScore" class="text-danger"></span>
			</div>
			<label asp-for="ExamTemplate.ExamDate" class="control-label">Exam date</label>
			<input asp-for="ExamTemplate.ExamDate" class="form-control" />
			<span asp-validation-for="ExamTemplate.ExamDate" class="text-danger"></span>

			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

</hr>

