@page
@model FinalProject.Front.Pages.Certificates.DetailsModel
@{
    ViewData["Title"] = "Details";
}

<style>
    /* Add custom styles for buttons and image */
    .btn-primary {
        background-color: #3498db; /* Blue color for primary button */
        color: #fff;
        transition: background-color 0.3s ease;
        margin-right: 10px; /* Add margin between buttons */
    }

        .btn-primary:hover {
            background-color: #2980b9; /* Darker blue on hover */
        }

    .btn-success {
        background-color: #2ecc71; /* Green color for success button */
        color: #fff;
        transition: background-color 0.3s ease;
    }

        .btn-success:hover {
            background-color: #27ae60; /* Darker green on hover */
        }

    .certificate-image {
        max-width: 50%; /* Set the maximum width to 100% to make the image responsive */
        height: auto; /* Maintain aspect ratio */
    }

    .button-container {
        margin-top: 10px; /* Add margin above the buttons */
    }
</style>

<h1>Certificate Details</h1>

<div>
    <h2>@Model.Certificate.Title</h2>
    <p>@Model.Certificate.Description</p>
    <p>Cost: $@Model.Certificate.Cost</p>

    @{
        // Assuming ImageUrl contains the URL to fetch the image
        byte[] imageData = Model.ImageUrl;
    }

    @if (imageData != null && imageData.Length > 0)
    {
        <img class="certificate-image" src="data:image/jpeg;base64,@Convert.ToBase64String(imageData)" alt="Certificate Image" />
    }
    else
    {
        <p>Error: No image available</p>
    }
</div>
<p class="button-container">
    <a class="btn btn-success" asp-page="./Edit" asp-route-id="@Model.Certificate.Id">Edit</a>
    <a class="btn btn-primary" asp-page="./Index">Back to List</a>
</p>
