@page
@model FinalProject.Front.Pages.Certificates.BuyModel
@{
    ViewData["Title"] = "Buy";
}

<h1>Buy</h1>

<h4>Buy Certificate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Ensure UserCertificate is initialized before accessing its properties -->
            @if (Model.UserCertificate != null)
            {
                <label asp-for="UserCertificate.Id"></label>
                <input type="hidden" asp-for="UserCertificate.Id" />
            }

            <div class="form-group">
                <input type="submit" value="Buy" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<hr />

<a class="btn btn-primary" asp-page="/Certificates/Index">Back to List</a>