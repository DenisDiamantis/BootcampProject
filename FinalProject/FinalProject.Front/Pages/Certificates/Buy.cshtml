@model FinalProject.Front.Pages.Certificates.BuyModel
@{
    ViewData["Title"] = "Buy";
}

<h1>Buy</h1>

<h4>Buy Certificate</h4>
<hr />
<h1>Certificate Details</h1>

<div>
    <h4>
        @Html.DisplayFor(model => model.Certificate.Title)
    </h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Certificate.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Certificate.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Certificate.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Certificate.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Certificate.Cost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Certificate.Cost)
        </dd>
        @{
            // Assuming ImageUrl contains the URL to fetch the image
            byte[] imageData = Model.ImageUrl;
        }

        @if (imageData != null && imageData.Length > 0)
        {
            <img src="data:image/jpeg;base64,@Convert.ToBase64String(imageData)" alt="Certificate Image" />
        }
        else
        {
            <p>Error: No image available</p>
        }
    </dl>
</div>

