@page
@model FinalProject.Front.Pages.Certificates.EditModel

@{
    ViewData["Title"] = "Edit";
}

<head>
    <style>
        /* Add custom styles for buttons and form */
        .btn-primary {
            background-color: #3498db; /* Blue color for primary button */
            color: #fff;
            transition: background-color 0.3s ease;
            margin-right: 10px; /* Add margin between buttons */
        }

            .btn-primary:hover {
                background-color: #2980b9; /* Darker blue on hover */
            }

        .btn-success {
            background-color: #2ecc71; /* Green color for success button */
            color: #fff;
            transition: background-color 0.3s ease;
        }

            .btn-success:hover {
                background-color: #27ae60; /* Darker green on hover */
            }
        .form-control {
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
            margin-bottom: 10px; /* Add margin below the input */
        }

        .form-control:focus {
            border-color: #3498db; /* Blue border on focus */
            box-shadow: 0 0 5px rgba(52, 152, 219, 0.5); /* Box shadow on focus */
        }
    </style>

</head>


<h1>Edit</h1>

<h4>Certificate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
				<div class="form-group">
					<label asp-for="Certificate.Title" class="control-label"></label>
					<input asp-for="Certificate.Title" class="form-control" />
					<span asp-validation-for="Certificate.Title" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Certificate.Description" class="control-label"></label>
					<input asp-for="Certificate.Description" class="form-control" />
					<span asp-validation-for="Certificate.Description" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Certificate.Cost" class="control-label"></label>
					<input asp-for="Certificate.Cost" class="form-control" />
					<span asp-validation-for="Certificate.Cost" class="text-danger"></span>
				</div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
