@page
@model FinalProject.Front.Pages.Certificates.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<head>
    <style>
        /* Add custom styles for buttons and form */
        .btn-danger {
            background-color: #dc3545; /* Red color for danger button */
            color: #fff;
            transition: background-color 0.3s ease;
            margin-right: 5px; /* Add margin between buttons */
        }

            .btn-danger:hover {
                background-color: #bd2130; /* Darker red on hover */
            }

        .btn-primary {
            background-color: #3498db; /* Blue color for primary button */
            color: #fff;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #2980b9; /* Darker blue on hover */
            }
        /* Add styles for the table */
        table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }

        th, td {
            padding: 8px;
            border: 1px solid #ddd;
            text-align: left;
        }

        th {
            background-color: #f2f2f2; /* Gray background for header cells */
        }
    </style>
</head>
<h1>Delete Certificate</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Certificate</h4>
    <div>
        <h4>@Model.Certificate.Title </h4>
    </div>
    
    <form method="post">
        <input type="hidden" asp-for="Certificate.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-primary" asp-page="./Index">Cancel</a>
    </form>
</div>




