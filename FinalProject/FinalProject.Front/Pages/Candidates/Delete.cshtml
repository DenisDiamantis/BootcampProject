@page
@model FinalProject.Front.Pages.Candidates.DeleteModel
@{
ViewData["Title"] = "Delete";
}

<h1>Delete Candidate</h1>

<h3>Are you sure you want to delete this user?</h3>
<div>
    <h4>@Model.Candidate.FirstName @Model.Candidate.LastName</h4>
    <p>Email: @Model.Candidate.Email</p>
</div>

<form method="post">
    <input type="hidden" asp-for="Candidate.Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a class="btn btn-primary" asp-page="./Index">Cancel</a>
</form>
